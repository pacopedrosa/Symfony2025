{% extends 'base.html.twig' %}

{% block title %}Lista de Salas{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .hall-list { list-style: none; padding: 0; }
    .hall-item { 
        border: 1px solid #ddd;
        margin: 10px 0;
        padding: 15px;
        border-radius: 5px;
    }
    .create-btn {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
        margin: 20px 0;
    }
    .btn {
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
    }
    .btn-primary {
        background-color: #007bff;
        color: white;
    }
    .flash-messages {
        margin: 10px 0;
    }
    .alert {
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 10px;
    }
    .alert-error {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }
</style>

<div class="example-wrapper">
    <h1>Lista de Salas</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <a href="{{ path('app_hall_new') }}" class="create-btn">Crear Nueva Sala</a>

    <ul class="hall-list">
    {% for hall in halls %}
        {% if hall.status == 'active' %}
            <li class="hall-item">
                <p>Sala #{{ hall.id }}</p>
                <p>Creada por: {{ hall.user ? hall.user.username : 'Usuario desconocido' }}</p>
                <p>Estado: {{ hall.status }}</p>
                <a href="{{ path('app_message', {'hallId': hall.id}) }}" class="btn btn-primary">Entrar al chat</a>
            </li>
        {% endif %}
    {% else %}
        <li>No hay salas disponibles</li>
    {% endfor %}
    </ul>
</div>
{% endblock %}

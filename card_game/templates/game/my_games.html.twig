{% extends 'base.html.twig' %}

{% block title %}Mis Partidas{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Historial de Partidas</h1>

    {% if stats.total > 0 %}
        {# Sección de Estadísticas #}
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Estadísticas</h5>
                        <div class="row text-center">
                            <div class="col">
                                <h3>{{ stats.total }}</h3>
                                <p>Total Partidas</p>
                            </div>
                            <div class="col">
                                <h3 class="text-success">{{ stats.wins }}</h3>
                                <p>Victorias</p>
                            </div>
                            <div class="col">
                                <h3 class="text-danger">{{ stats.losses }}</h3>
                                <p>Derrotas</p>
                            </div>
                            <div class="col">
                                <h3 class="text-warning">{{ stats.draws }}</h3>
                                <p>Empates</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Lista de Partidas #}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Jugador 1</th>
                        <th>Cartas J1</th>
                        <th>Jugador 2</th>
                        <th>Cartas J2</th>
                        <th>Estado</th>
                        <th>Ganador</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for game in games %}
                        <tr>
                            <td>{{ game.id }}</td>
                            <td>{{ game.player1.username }}</td>
                            <td>
                                {% if game.player1Card1 and game.player1Card2 %}
                                    {% if game.status == 'finished' or app.user == game.player1 %}
                                        {{ game.player1Card1.number }} y {{ game.player1Card2.number }}
                                    {% else %}
                                        Cartas seleccionadas
                                    {% endif %}
                                {% else %}
                                    Sin seleccionar
                                {% endif %}
                            </td>
                            <td>{{ game.player2 ? game.player2.username : 'Pendiente' }}</td>
                            <td>
                                {% if game.player2Card1 and game.player2Card2 %}
                                    {% if game.status == 'finished' or app.user == game.player2 %}
                                        {{ game.player2Card1.number }} y {{ game.player2Card2.number }}
                                    {% else %}
                                        Cartas seleccionadas
                                    {% endif %}
                                {% else %}
                                    Sin seleccionar
                                {% endif %}
                            </td>
                            <td>
                                {% if game.status == 'open' %}
                                    <span class="badge bg-success">Abierta</span>
                                {% elseif game.status == 'waiting' %}
                                    <span class="badge bg-warning">Esperando</span>
                                {% elseif game.status == 'finished' %}
                                    <span class="badge bg-info">Terminada</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if game.winner %}
                                    {{ game.winner.username }}
                                {% elseif game.status == 'finished' %}
                                    Empate
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('game_show', {'id': game.id}) }}" class="btn btn-sm btn-info">Ver</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">No tienes partidas</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-info">
            No has jugado ninguna partida todavía.
            <a href="{{ path('game_new') }}" class="btn btn-primary ms-3">Crear Nueva Partida</a>
        </div>
    {% endif %}

    <div class="mt-4">
        <a href="{{ path('game_new') }}" class="btn btn-primary">Crear Nueva Partida</a>
        <a href="{{ path('game_index') }}" class="btn btn-secondary">Volver al Listado</a>
    </div>
</div>
{% endblock %} 
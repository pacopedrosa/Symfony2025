{% extends 'base.html.twig' %}

{% block title %}Lista de Salas{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .hall-list { list-style: none; padding: 0; }
    .hall-item { 
        border: 1px solid #ddd;
        margin: 10px 0;
        padding: 15px;
        border-radius: 5px;
    }
    .create-btn {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        display: inline-block;
        margin: 20px 0;
    }
</style>

<div class="example-wrapper">
    <h1>Lista de Salas âœ…</h1>

    <a href="{{ path('app_hall_new') }}" class="create-btn">Crear Nueva Sala</a>

    <ul class="hall-list">
    {% for hall in halls %}
        <li class="hall-item">
            <p>Sala #{{ hall.id }}</p>
            <p>Creada por: {{ hall.user.username }}</p>
            <p>Estado: {{ hall.status }}</p>
            <a href="{{ path('app_message', {'hallId': hall.id}) }}" class="btn btn-primary">Entrar al chat</a>
        </li>
    {% else %}
        <li>No hay salas disponibles</li>
    {% endfor %}
    </ul>
</div>
{% endblock %}
